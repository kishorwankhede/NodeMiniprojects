<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script type="text/javascript" src="ajax.js">

    </script>
</head>
<body>
    <%-include("home.ejs")%>

    <div class="container mt-5 bg-dark p-5">
       <form name="frm" action="/savemp" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <input type="text" name="name" class="form-control" value="" placeholder="enter name"/>

        </div>
            <div class="form-group">
            <input type="text" id="uemail" name="email" class="form-control" value="" placeholder="enter email" onblur="checkEmailExistance(this.value)"/>
            <label class="text-white" id="labelmsg"></label>
        </div>
        
            <div class="form-group">
            <input type="text" name="contact" class="form-control" value="" placeholder="enter contact"/>

            
        </div>
        
            <div class="form-group">
            <input type="text" name="sal" class="form-control" value="" placeholder="enter salary"/>

            
         </div>
          <div class="form-group">
            <input type="file" name="photo" class="form-control" value="" />
            
        </div>
        
         <div class="form-group">
            <select name="deptid" class="form-control">
                <option>choose Dept</option>
                <%
                deptList.forEach((deptData,index)=>{
                %>

                    <option value="<%=deptData.deptid%>"><%=deptData.deptname%></option>
                    <%
                });
                %>

            </select>
        </div>
          <div class="form-group">
            <input type="submit" name="s" class="form-control" value="Add new Employee" />
            
        </div>
         <%
           if(msg.length!=0)
           {

           %>
           <div class="alert alert-success" role="alert">
             <%=msg%>   
           </div>
           <%
        }
        %>
        </form>
    </div>
</body>
</html>